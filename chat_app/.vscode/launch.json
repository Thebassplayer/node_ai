{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Current File",
      "runtimeArgs": ["--no-warnings", "--loader", "ts-node/esm"],
      "cwd": "${workspaceFolder}",
      "args": ["${relativeFile}"],
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen", // Prevents automatic switching to the debug console
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}
